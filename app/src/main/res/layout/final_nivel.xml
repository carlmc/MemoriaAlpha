<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6e431">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EXCELENTE"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="has completado el nivel 1"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PUNTAJE"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toStartOf="@+id/textView9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PUESTO EN EL RANKING:"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="6°"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="comparte y gana puntos extra:"
        android:id="@+id/textView15"
        android:layout_below="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/textView15"
        android:layout_toEndOf="@+id/textView13"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tienes 5 stickers bonus, comartelos con tus amigos y acumula un mayor puntaje. Ver stickers"
        android:id="@+id/textView16"
        android:layout_above="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignStart="@+id/textView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignStart="@+id/textView12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toStartOf="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:background="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toEndOf="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUAR JUGANDO"
        android:id="@+id/button"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView14"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/imageView9"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recuerda compartir el app o los stickers para ganar más puntaje y poder ganar una tablet s6."
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/imageView14"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conoce más sobre el premio"
        android:id="@+id/textView18"
        android:layout_below="@+id/imageView14"
        android:layout_alignStart="@+id/textView17" />
</RelativeLayout>